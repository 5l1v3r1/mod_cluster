<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/mod_cluster.sar</directory>
      <outputDirectory>mod_cluster.sar</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>demo/client/target/dependencies/lib</directory>
      <outputDirectory>demo/client/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>demo/client/target</directory>
      <outputDirectory>demo/client/lib</outputDirectory>
      <excludes>
        <exclude>classes/**</exclude>
        <exclude>dependencies/**</exclude>
        <exclude>maven-archiver/**</exclude>
        <exclude>*-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>demo/client/target/classes</directory>
      <outputDirectory>demo/client</outputDirectory>
      <includes>
        <include>*.bat</include>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>demo/server/target</directory>
      <outputDirectory>demo/server</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/JBossWeb-Tomcat</directory>
      <outputDirectory>JBossWeb-Tomcat</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
